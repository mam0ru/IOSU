                @Html.ValidationMessageFor(model => model.PartnerType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Contact.AgentFullName, htmlAttributes: new { @class = "control-label col-md-2" })
