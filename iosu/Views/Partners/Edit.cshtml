@model iosu.Entities.Partner
@{
    ViewBag.Title = String.Format("Edit {0}",Model.Name);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

