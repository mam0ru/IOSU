@using System.Security.Cryptography
@model IEnumerable<iosu.Entities.Partner>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <button class="col-md-2 btn-default">
        @Html.ActionLink("Create New", "Create")
    </button>
</div>
<div class="row">
    <div class="row">
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.PartnerType)
        </div>
        <div class="col-md-3">
            @Html.DisplayNameFor(model => model.Contact.PhoneNumber)
        </div>
        <div class="col-md-3">

        </div>
    </div>

    @foreach (var item in Model)
    {
    <div class="row">
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.Name)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.PartnerType)
            </div>
            <div class="col-md-3">
                @Html.DisplayFor(modelItem => item.Contact.PhoneNumber)
            </div>
            <div class="col-md-3">
                <div class="row">
                    <button class="col-md-4 btn-default">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </button>
                    <button class="col-md-4 btn-default">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </button>
                    <button class="col-md-4 btn-default">
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                    </button>
                </div>
            </div>
        </div>
    }
</div>
